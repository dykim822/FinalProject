<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="reportns">
	<insert id="RPinsert" parameterType="report">
		insert into report values
		(#{RP_num},#{RP_reason}, #{MB_num}, #{MB_numR}, #{CP_num})
	</insert>
	
	<select id="getMaxNum" resultType="integer">
		select nvl(max(RP_num),0) + 1 from report
	</select>
	
	<!-- 관리자가 모든 신고 내역 갯수 조회 -->
	<select id="getRpTotal" parameterType="report" resultType="integer">
		select count(*) from report
			<!-- <where>
				<if test="keyword!=null and keyword!=''">
					${search} like '%'||#{keyword}||'%'
				</if>
			</where> -->
	</select>
	
	<!-- 관리자가 신고 목록 조회(검색 기능 수정 필요) -->
	<select id="rpList" parameterType="report" resultType="report">
		select * from (select a.*, rowNum rn from (select * from report
			<where>
				<if test="keyword!=null and keyword!=''">
					${search} like '%'||#{keyword}||'%'
				</if>
			</where>
			order by RP_num desc) a)
			where rn between #{startRow} and #{endRow}
	</select>
</mapper>